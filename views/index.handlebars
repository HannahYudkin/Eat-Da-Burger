<h1>Burgers!</h1>

<div class="uneaten-burger-list">
  <div>
    <h2>Delicious burgers you can eat!</h2>
    <ul>
      {{#each burger}}
      {{#unless eaten}}
      {{> burgers/burgers-block eaten=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="eaten-burger-list">
  <div>
    <h2>Burgers that have been eaten!</h2>

    <ul>
      {{#each burger}}
      {{#if eaten}}
      {{> burgers/burgers-block eaten=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="add-a-burger">
  <div class="background-container">
    <h2>Add a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <div class="form-group">
        <label for="eaten">Eaten?</label><br>
        <input type="radio" name="eaten" value="1" checked> Eaten!<br>
        <input type="radio" name="eaten" value="0"> Eat me
      </div>

      <button type="submit">Add burger</button>

    </form>
  </div>
</div>